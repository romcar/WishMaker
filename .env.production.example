# Production Environment Configuration
# Copy this to .env.production and customize for your production environment

# Database Configuration - USE PRODUCTION DATABASE
DATABASE_URL=postgres://prod_user:secure_password@prod_host:5432/wishmaker_prod
DB_HOST=prod_host
DB_PORT=5432
DB_NAME=wishmaker_prod
DB_USER=prod_user
DB_PASSWORD=secure_password

# PostgreSQL Container Configuration (if using Docker in production)
POSTGRES_DB=wishmaker_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=secure_password

# JWT Configuration - CRITICAL: Generate a strong secret for production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_32_BYTE_HEX_STRING_IN_PRODUCTION

# Backend Configuration
PORT=8000
NODE_ENV=production

# Frontend Configuration - USE PRODUCTION URLs
REACT_APP_API_URL=https://api.yourdomain.com

# WebAuthn Configuration - USE PRODUCTION DOMAIN
RP_NAME=WishMaker
RP_ID=yourdomain.com
ORIGIN=https://yourdomain.com

# CORS Configuration - RESTRICT TO PRODUCTION DOMAINS
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Security & Rate Limiting Configuration (production-optimized)
REQUEST_SIZE_LIMIT=5mb
RATE_LIMIT_WINDOW_MS=900000
WEBAUTHN_TIMEOUT_MS=30000
CHALLENGE_TIMEOUT_MS=300000
SESSION_TIMEOUT_MINUTES=120

# Additional Production Environment Variables
# SSL/TLS Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Monitoring and Logging
# LOG_LEVEL=info
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Email Configuration (if needed)
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_USER=your_email@yourdomain.com
# SMTP_PASS=your_email_password

# Redis Configuration (if caching is added)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

REACT_APP_DEMO_MODE=false
REACT_APP_GITHUB_PAGES=true  # if deploying to GitHub Pages
NODE_ENV=production
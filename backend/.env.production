# =============================================================================
# BACKEND PRODUCTION CONFIGURATION
# =============================================================================
# Backend-specific production environment variables
# This file extends the root .env.production

# Production Database (Replace with actual values)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=wishmaker_prod
DB_USER=your-prod-user
DB_PASSWORD=CHANGE-THIS-PRODUCTION-PASSWORD
DATABASE_URL=postgresql://user:password@host:port/database

# Production Security
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-64-CHARS
RATE_LIMIT_WINDOW_MS=300000
REQUEST_SIZE_LIMIT=1mb

# Production Logging
DEBUG=false
LOG_LEVEL=info
# =============================================================================
# BACKEND DEVELOPMENT CONFIGURATION
# =============================================================================
# Backend-specific development environment variables
# This file extends the root .env.development

# Database Connection (Docker PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/postgres

# Development Security (Less restrictive for development)
JWT_SECRET=dev-jwt-secret-for-local-development-only-change-in-prod
RATE_LIMIT_WINDOW_MS=900000
REQUEST_SIZE_LIMIT=10mb

# Development Logging
DEBUG=true
LOG_LEVEL=debug